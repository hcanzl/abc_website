<li>
  <%= gravatar_for user %>
  <%= link_to user.name, user %>

  <% if current_user.admin? %>
    | <%= link_to "edit", edit_user_path(user) %>

  <% end %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "Are You sure?" } %>
  <% end %>

</li>
